#include "esp_camera.h"
#include <WiFi.h>
#include "soc/soc.h"
#include "soc/rtc_cntl_reg.h"

#define CAMERA_MODEL_AI_THINKER
#include "camera_pins.h"

// WiFi
const char* ssid = "SOC";
const char* password = "$2a$12$lL4NJJ8NSD4abIEJqk.Hne5ALlj8Al8oPbp7meFW8ihH0PrPajbAS";

// Flash pin
#define FLASH_GPIO_NUM 4

WiFiServer server(80);

void setup() {
  Serial.begin(115200);
  WRITE_PERI_REG(RTC_CNTL_BROWN_OUT_REG, 0);
  pinMode(FLASH_GPIO_NUM, OUTPUT);
  digitalWrite(FLASH_GPIO_NUM, LOW);

  camera_config_t config;
  config.ledc_channel = LEDC_CHANNEL_0;
  config.ledc_timer = LEDC_TIMER_0;
  config.pin_d0 = Y2_GPIO_NUM;
  config.pin_d1 = Y3_GPIO_NUM;
  config.pin_d2 = Y4_GPIO_NUM;
  config.pin_d3 = Y5_GPIO_NUM;
  config.pin_d4 = Y6_GPIO_NUM;
  config.pin_d5 = Y7_GPIO_NUM;
  config.pin_d6 = Y8_GPIO_NUM;
  config.pin_d7 = Y9_GPIO_NUM;
  config.pin_xclk = XCLK_GPIO_NUM;
  config.pin_pclk = PCLK_GPIO_NUM;
  config.pin_vsync = VSYNC_GPIO_NUM;
  config.pin_href = HREF_GPIO_NUM;
  config.pin_sccb_sda = SIOD_GPIO_NUM;
  config.pin_sccb_scl = SIOC_GPIO_NUM;
  config.pin_pwdn = PWDN_GPIO_NUM;
  config.pin_reset = RESET_GPIO_NUM;

  config.xclk_freq_hz = 20000000;
  config.pixel_format = PIXFORMAT_JPEG;
  config.frame_size = FRAMESIZE_UXGA;
  config.jpeg_quality = 10;
  config.fb_count = 2;
  config.fb_location = CAMERA_FB_IN_PSRAM;

  if (esp_camera_init(&config) != ESP_OK) {
    Serial.println("Camera init failed");
    while(true);
  }

  Serial.println("Camera OK");

  WiFi.begin(ssid, password);
  Serial.print("Connecting WiFi");
  while (WiFi.status() != WL_CONNECTED) { delay(500); Serial.print("."); }
  Serial.println("\nWiFi connected!");
  Serial.println(WiFi.localIP());

  server.begin();
}

// Basic crayfish egg detection (checks brightness in top area)
bool detectCrayfishEgg(camera_fb_t *fb) {
  // Only sample some pixels for speed
  int step = 10; // pixel step
  int brightPixels = 0;
  int threshold = 200; // pixel brightness threshold (0-255)

  for (int i = 0; i < fb->len; i += step) {
    if ((uint8_t)fb->buf[i] > threshold) brightPixels++;
  }

  // If enough bright pixels, assume eggs are present
  return brightPixels > 50;
}

void loop() {
  WiFiClient client = server.available();
  if (!client) return;

  while(!client.available()) delay(1);
  client.readStringUntil('\r');
  client.flush();

  digitalWrite(FLASH_GPIO_NUM, HIGH);
  delay(50);

  camera_fb_t * fb = esp_camera_fb_get();
  digitalWrite(FLASH_GPIO_NUM, LOW);
  if (!fb) return;

  bool eggsDetected = detectCrayfishEgg(fb);
  if (eggsDetected) Serial.println("Crayfish eggs detected!");
  else Serial.println("No eggs detected.");

  client.println("HTTP/1.1 200 OK");
  client.println("Content-Type: image/jpeg");
  client.print("Content-Length: ");
  client.println(fb->len);
  client.println();
  client.write(fb->buf, fb->len);
  esp_camera_fb_return(fb);
}
